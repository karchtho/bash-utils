# Configuration spécifique pour l'environnement DEVELOPMENT
# ==========================================================

# Modules PHP supplémentaires pour le développement
ENVIRONMENT_PHP_MODULES="php-xdebug php-dev php-json php-xml php-yaml php-sqlite3"

# Configuration PHP.ini pour le développement
ENVIRONMENT_PHP_CONFIG="
; Configuration PHP pour DEVELOPMENT
error_reporting = E_ALL
display_errors = On
display_startup_errors = On
log_errors = On
log_errors_max_len = 1024
error_log = /var/log/php_errors.log

; Debug
html_errors = On
docref_root = \"http://www.php.net/\"

; Limites augmentées pour le développement
memory_limit = 512M
max_execution_time = 300
max_input_time = 300
post_max_size = 64M
upload_max_filesize = 64M

; Session pour le développement
session.cookie_secure = Off
session.cookie_httponly = On

; OPcache désactivé pour voir les changements immédiatement
opcache.enable = 0
opcache.enable_cli = 0
"

# Outils supplémentaires pour le développement
ENVIRONMENT_TOOLS="composer nodejs npm curl wget git-flow"

# Configuration Xdebug
ENVIRONMENT_XDEBUG_CONFIG="
; Configuration Xdebug pour développement
zend_extension=xdebug.so
xdebug.mode = debug,develop,coverage
xdebug.start_with_request = yes
xdebug.client_host = host.docker.internal
xdebug.client_port = 9003
xdebug.log = /var/log/xdebug.log
xdebug.discover_client_host = true
"

# Configuration Apache pour développement
ENVIRONMENT_APACHE_CONFIG="
# Configuration Apache pour développement
ServerTokens Full
ServerSignature On
LogLevel info
"

# Configuration MySQL pour développement
ENVIRONMENT_MYSQL_CONFIG="
# Configuration MySQL pour développement
general_log = 1
general_log_file = /var/log/mysql/query.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
"